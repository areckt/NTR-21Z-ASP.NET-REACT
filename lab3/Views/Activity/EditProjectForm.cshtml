@using lab1.Storage
@model lab1.Models.Project

@{
    ViewData["Title"] = "Time Tracker - Edit Project";
}

<div class="container">
    <h4>Edit the project</h4>
    <div class="constainer">
        @using (Html.BeginForm("EditProject", "Activity", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.RowVersion)
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.Manager)
            @Html.HiddenFor(model => model.Active)


            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Budget)
                @Html.EditorFor(model => model.Budget, new {htmlAttributes = new {@class = "form-control"}})
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }

        <input type="button" value="Back" class="btn btn-secondary" style="margin-top: 0.5rem; width: fit-content"
            onclick='window.location.href = "@Url.Action("Index", "Activity")";' />
    </div>
</div>